# Database Configuration for NeonDB
# Replace with your actual NeonDB connection string
# Format: postgresql://username:password@host:port/database_name?sslmode=require
DATABASE_URL="postgresql://username:password@ep-example.us-east-1.aws.neon.tech/neondb?sslmode=require"

# API Keys (keep existing ones)
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# File & Storage Settings
RESEARCH_PAPERS_DIR="./research_papers"
CHROMA_PERSIST_DIR="./db/chroma_store"
MAX_FILE_SIZE=104857600

# Analytics Configuration
ENABLE_ANALYTICS=true
ANONYMOUS_TRACKING=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# Logging
LOG_LEVEL="INFO"
LOG_TO_FILE=false

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,https://your-domain.com"

# Session Configuration
SESSION_TIMEOUT_HOURS=24
MAX_PAPERS_PER_SESSION=50

# Performance Monitoring
MONITOR_PROCESSING_TIME=true
ALERT_SLOW_REQUESTS=true
SLOW_REQUEST_THRESHOLD_SECONDS=30
